<!-- ENG: BERANDA IS HOMEPAGE -->

<!-- info-container -->
<div class="info-container col-2 bg-dark">

</div>


<!-- Eng: User Data -->
<div class="div-beranda col-8">
  <div class="div-data-pribadi">
    <img class="foto-profile" src="/user/uploads/<%= user.image %> " alt="">
    <a href="/edituser"><img id="icon-edit" src="images/edit.png" alt="edit"></a>
    <div class="data-pribadi utama">
      <h2 class="nama"><%= name %></h2>
      <h5 class="jabatan-terakhir"><%= jobs %> <%= company %></h5>
      <!-- <p>Batam, Kepulauan Riau, Indonesia</p> -->
    </div>
    <%- include('./partials/messages.ejs') %>
  </div>

  <div class="">
    <h2>List of Example Project</h2>
    <% listprojects.forEach((listproject) => { %>
    <div class="daftar-proyek col-12 row">
      <div class="col-2">
        <img class="logo-proyek" src="/project/<%= listproject._id %>/compressedlogo/logo.png" alt="">
      </div>
      <div class="div-data-proyek-besar col-10">
        <div class="row">
          <h4><a href="/project/<%= listproject._id %>" class="nama-proyek text-dark">
              <%= listproject.projectName %>
            </a></h4>
          <!-- <a href="/project/<%= listproject._id %>"><img class="col-1" id="icon-edit-data-proyek" src="images/edit.png" alt="edit"></a> -->
        </div>
        <div class="row">
          <div class="div-data-proyek col-4">
            <p class="data-proyek">Project Duration: <%= listproject.startDate %> until <%= listproject.endDate %></p>
            <p class="data-proyek">Locaton: <%= listproject.location %></p>
            <p class="data-proyek">Area: </p>
          </div>
          <div class="div-data-proyek col-3">
            <p class="data-proyek">Project Cost: <%= listproject.nilaiProyek%></p>
            <p class="data-proyek">Owner: <%= listproject.username %></p>
            <p class="data-proyek">Consultant: <%= listproject.konsultan%></p>
          </div>
          <div class="div-data-proyek col-2">
            <p class="data-proyek">Contractor: <%= listproject.kontraktor%></p></p>
            <p class="data-proyek"></p>
          </div>
          <div class="div-data-proyek col-3">
            <p class="data-proyek">Your Position: <%= jobs %></p>
            <a href="/project/<%= listproject._id %>" class="btn btn-warning btn-sm"> Notification</a>
            <a href="/project/<%= listproject._id %>" class="btn btn-warning btn-sm"> Link Invite</a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>

</div>
