  <!-- Informasi Proyek -->
  <div class="div-informasi-proyek col-9">
    <h2>Tahap: Konstruksi</h2>
    <h6>Progress Total</h6>
    <div class="progress">
      <div class="progress-bar bg-dark" role="progressbar" style="width: <%= project.progrestotal %>%;" aria-valuenow="<%= project.progrestotal %>" aria-valuemin="0" aria-valuemax="100"><%= project.progrestotal %> %</div>
    </div>
    <h6>Pengeluaran Total</h6>
    <div class="progress">
      <div class="progress-bar bg-dark" role="progressbar" style="width: 75%;" aria-valuenow="75>" aria-valuemin="0" aria-valuemax="100">dirahasiakan</div>
    </div>

    <div class="div-utama row">
      <!-- Div Peta -->
      <div class="div-peta col-7">
        <h5>AMATI kondisi Proyek</h5>
        <a href="/projectindex/<%= project.id %>"><img id="peta" src="../img/peta.png" alt=""></a>

        <div class="daftar-proyek col-12">
          <div class="div-data-proyek-besar">
            <div class="row">
              <h4>Informasi Umum</h4>
            </div>
            <div class="row">
              <div class="div-data-proyek col-3">
                <p class="data-proyek">Rentang: 16 Oktober 2015 - Masih Berlangsung</p>
                <p class="data-proyek">Lokasi:  <%= project.location %></p>
                <p class="data-proyek">Luas: 80 Hektar</p>
              </div>
              <div class="div-data-proyek col-3">
                <p class="data-proyek">Nilai Investasi: 86,55 Triliun Rupiah</p>
                <p class="data-proyek">Owner: Konsorsium KCIC</p>
                <p class="data-proyek">Konsultan: CDJO</p>
              </div>
              <div class="div-data-proyek col-3">
                <p class="data-proyek">Kontraktor: PT. WIKA</p>
                <p class="data-proyek">Anggota: 26 Orang</p>
              </div>
              <div class="div-data-proyek col-3">
                <p class="data-proyek">Jabatan Anda: <%= jobs %> </p>
                <button type="button" class="btn btn-warning btn-sm" id="link-invite">Link Invite</button>
              </div>
            </div>
          </div>
        </div>

      </div>

      <!-- Div Kosong -->
      <div class="col-1">
      </div>

      <!-- Div Notifikasi -->
      <div class="div-div-notifikasi col-4">
        <h5>Notifikasi Terbaru</h5>
        <!-- Template Notifikasi -->
        <form class="sign-up-form" action="/projectcomment" method="POST">
          <p class="nama">Beri Komentar</p>
          <input type="hidden" name="username" value="<%= user.username %>" required/>
          <input type="hidden" name="picture" value="<%= user.image %>" required/>
          <input type="hidden" name="jobs" value="<%= jobs %>" required/>
          <input type="hidden" name="company" value="<%= company %>" required/>
          <input type="hidden" name="projectid" value="<%= project._id %>" required/>
          <input class="sign-up-box" type="text" name="isicomment" placeholder="komentar" id="isicomment" value="<%= typeof isicomment != 'undefined' ? isicomment : '' %>" required/>
          
          <button type="submit" class="btn btn-dark">Komentar</button>
          <%- include('./partials/messages.ejs') %>
        </form>
        <!-- Template Notifikasi sampai sini -->
        <% commentprojects.reverse().forEach((commentproject) => { %>
          <div class="div-notifikasi alert bg-light row">
            <div class="col-2">
              <img class="foto-profile" src="../user/uploads/<%= commentproject.picture %> " alt="">
            </div>
            <div class="col-10">
              <a class="nama" href=""><%= commentproject.username %> </a>
              <p class="jabatan">Jabatan: <%= commentproject.jobs %></p>
              <p class="perusahaan">Perusahaan: <%= commentproject.company %></p>
              <p class="timestamp"><%= commentproject.tanggal %>
                <form method="POST" action="/comment?_method=DELETE">
                  <input type="hidden" name="projectid" value="<%= project._id %>">
                  <input type="hidden" name="commentprojectid" value="<%= commentproject._id %>">
                  <button type="submit" class="btn btn-danger badge" >Delete Comment</button>
                </form>
                <button type="button" class="btn btn-warning btn-sm reply">Reply</button>
              </p>
            </div>
            <p class="keterangan"><%= commentproject.isicomment %> </p>
          </div>
          <!-- Template Notifikasi sampai sini -->
          <% }) %>

      </div>

    </div>
  </div>
